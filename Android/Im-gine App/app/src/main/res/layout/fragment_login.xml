<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivity.fragments.login.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            app:cardCornerRadius="14dp"
            android:layout_marginTop="-14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/login_bkg"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop">
            </ImageView>
            <TextView
                android:id="@+id/title_textView"
                android:layout_below="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:layout_below="@id/header"
            android:elevation="12dp"
            android:visibility="gone"
            android:id="@+id/login_cardView"
            android:layout_marginTop="-16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="460dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signin_title"
                    android:textAllCaps="true"
                    android:id="@+id/login_title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"
                    android:textColor="@color/login_primary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_title"
                    android:text="@string/signin_email"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:id="@+id/email_title"
                    android:textColor="@color/login_medium"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:inputType="textEmailAddress"
                    android:hint="@string/hint_email"
                    android:id="@+id/email"
                    android:backgroundTint="@color/login_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:text="@string/signin_password"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:id="@+id/password_title"
                    android:textColor="@color/login_medium"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_title"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/password"
                    android:imeOptions="actionSend"
                    android:layout_marginRight="16dp"
                    android:inputType="textPassword"
                    android:hint="@string/hint_password"
                    android:backgroundTint="@color/login_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password"
                    android:text="@string/signin_lostPassword"
                    android:textColor="@color/login_medium"
                    android:layout_marginRight="16dp"
                    android:id="@+id/password_lost"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"/>

                <custom_font.MyTextView
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_gradient"
                    android:text="@string/signin_button"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/password_lost"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginBtn"
                    android:id="@+id/signupBtn"
                    android:text="@string/signin_createAccount"
                    android:textColor="@color/login_medium"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:layout_below="@id/header"
            android:elevation="24dp"
            android:layout_marginTop="-16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/register_cardView"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_title"
                    android:textAllCaps="true"
                    android:id="@+id/signup_title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"
                    android:textColor="@color/login_primary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_title"
                    android:text="@string/signin_email"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp"
                    android:id="@+id/register_email_title"
                    android:textColor="@color/login_medium"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_email_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:id="@+id/register_email"
                    android:backgroundTint="@color/login_medium"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_email"
                android:text="@string/signin_password"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:id="@+id/register_password_title"
                android:textColor="@color/login_medium"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_password_title"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/register_password"
                    android:inputType="textPassword"
                    android:layout_marginRight="16dp"
                    android:hint="@string/hint_password"
                    android:backgroundTint="@color/login_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_password"
                    android:text="@string/signup_password_confirmation"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:id="@+id/register_password_confirmation_title"
                    android:textColor="@color/login_medium"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_password_confirmation_title"
                    android:layout_marginLeft="16dp"
                    android:inputType="textPassword"
                    android:id="@+id/register_password_confirmation"
                    android:layout_marginRight="16dp"
                    android:imeOptions="actionSend"
                    android:hint="@string/hint_confirmPassword"
                    android:backgroundTint="@color/login_medium"/>

                <custom_font.MyTextView
                    android:id="@+id/registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_gradient"
                    android:text="@string/signup_button"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/register_password_confirmation"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="24dp"
                    android:id="@+id/social_signup"
                    android:layout_below="@id/registerBtn"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:elevation="12dp">

                    <com.facebook.login.widget.LoginButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/facebook_login_button"/>

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/facebook_button"
                            android:background="@drawable/facebook_login"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:layout_marginRight="16dp">

                        <com.google.android.gms.common.SignInButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/google_login_button"/>

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/google_button"
                            android:background="@drawable/google_login" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp">

                        <com.twitter.sdk.android.core.identity.TwitterLoginButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/twitter_login_button"
                            android:visibility="gone"/>

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/twitter_button"
                            android:background="@drawable/twitter_login" />
                    </FrameLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/social_signup"
                    android:id="@+id/signinBtn"
                    android:text="@string/signup_existingAccount"
                    android:textColor="@color/login_medium"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="32dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>