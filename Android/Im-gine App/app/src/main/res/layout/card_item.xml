<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_information">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/card_profileImage"
                app:cardCornerRadius="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/circle_profileImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/miriam_profile"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_profileUsername"
                android:layout_toRightOf="@id/card_profileImage"
                android:text="Miriam Leone"
                android:textColor="@color/colorTextOnPrimary"
                android:textSize="14sp"
                android:layout_centerVertical="true">
            </TextView>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:src="@drawable/post_more"
                    android:id="@+id/post_more"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp">

                </ImageButton>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:layout_below="@id/profile_information"
                android:id="@+id/card_sharedImage"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/tech"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_impressions"
                android:layout_below="@id/card_sharedImage">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:src="@drawable/post_views"
                    android:id="@+id/post_views"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_viewsCount"
                    android:layout_toRightOf="@id/post_views"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="1,265"
                    android:textColor="@color/colorTextOnPrimary">
                </TextView>
                <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@id/post_viewsCount"
                android:src="@drawable/post_messages"
                android:id="@+id/post_messages"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp">
            </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_messagesCount"
                    android:layout_toRightOf="@id/post_messages"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="23"
                    android:textColor="@color/colorTextOnPrimary">
                </TextView>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_toRightOf="@id/post_messagesCount"
                    android:src="@drawable/post_share"
                    android:id="@+id/post_share"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_shareCount"
                    android:layout_toRightOf="@id/post_share"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="2"
                    android:textColor="@color/colorTextOnPrimary">
                </TextView>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/post_bookmark"
                    android:id="@+id/post_bookmark"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp">
                </ImageButton>


            </RelativeLayout>



            <TextView
                android:id="@+id/post_username"
                android:textColor="#262626"
                android:layout_below="@id/post_impressions"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Brochure"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/post_text"
                android:layout_below="@id/post_username"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>