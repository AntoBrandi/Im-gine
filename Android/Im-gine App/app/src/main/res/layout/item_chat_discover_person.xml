<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:cardCornerRadius="14dp"
        android:layout_marginRight="8dp"
        android:id="@+id/item_chat_card">
        <ImageView
            android:id="@+id/item_chat_card_image"
            android:src="@drawable/girl_1"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giulia"
        android:translationZ="100dp"
        android:id="@+id/item_chat_card_name"
        android:textSize="28sp"
        android:layout_margin="16dp"
        android:textColor="@color/colorTextOnSecondary"
        android:textStyle="bold"
        android:layout_alignBottom="@id/item_chat_card"/>

</RelativeLayout>